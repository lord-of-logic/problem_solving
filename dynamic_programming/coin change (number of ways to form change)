#include<iostream>
#include<vector>

using namespace std;

int main()
{
    int x=5;
    int n=3;
    vector<int> A(n);
    for(int i=0;i<n;i++)
        A[i]=i+1;
    vector<vector<int> >V(x+1,vector<int> (n+1,0));
    for(int i=0;i<x+1;i++)
    {
        for(int j=0;j<n+1;j++)
        {
            if(i==0)
            {
                V[i][j]=1;
                continue;
            }
            if(j==0)
            {
                V[i][j]=0;
                continue;
            }
            V[i][j]=i<A[j-1]?V[i][j-1]:V[i][j-1]+V[i-A[j-1]][j];
        }
    }
    for(int i=0;i<x+1;i++)
    {
        for(int j=0;j<n+1;j++)
            cout<<V[i][j]<<" ";
        cout<<"\n";
    }
    cout<<"Number of ways to form change is: "<<V[x][n];
    return 0;
}
