#include<iostream>
#include<vector>
#include<cstring>

using namespace std;

int main()
{
    string str="SS MMMMAAA RRRRTT";
    char curr_ele=str[0];
    int curr_count=1;
    vector<char> B;
    for(int i=0;i<str.length();i++)
    {
        if(str[i]!=curr_ele)
        {
            B.push_back(curr_ele);
            B.push_back(curr_count+48);
            curr_ele=str[i];
            curr_count=1;
            continue;
        }
        curr_count++;
    }
    B.push_back(curr_ele);
    B.push_back(curr_count+48);
    for(int i=0;i<B.size();i++)
    	str+=B[i];
    return 0;
}
//Time complexity: O(n)
