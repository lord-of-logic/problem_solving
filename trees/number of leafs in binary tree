#include<iostream>
#include<vector>

using namespace std;

class node
{
public:
    char data;
    node *left;
    node*right;
    node(char a)
    {
        this->data=a;
        this->left=nullptr;
        this->right=nullptr;
    }
};

int count_leafs(node* root)
{
    if(!root->left && !root->right)
        return 1;
    if(!root->left)
        return count_leafs(root->right);
    if(!root->right)
        return count_leafs(root->left);
    return count_leafs(root->left)+count_leafs(root->right);
}

int main()
{
    node *root=new node('a');
    root->left=new node('b');
    root->right=new node('c');
    root->left->left=new node('d');
    root->left->right=new node('e');
    root->right->left=new node('f');
    root->right->right=new node('g');
    cout<<"Number of leafs in the tree are: "<<count_leafs(root);
    return 0;
}
